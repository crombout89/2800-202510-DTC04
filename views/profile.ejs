<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title %></title>
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f4f6f8;
      margin: 0;
      padding: 0;
      color: #333;
    }

    h1 {
      font-size: 2.2rem;
      color: #2e7d32;
      margin: 40px 0 30px;
      text-align: center;
    }

    .profile-wrapper {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 30px;
      padding: 0 20px;
    }

    .profile-box {
      background-color: #fff;
      padding: 30px 40px;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      flex: 1;
      min-width: 300px;
      max-width: 400px;
    }

    .profile-section {
      margin-bottom: 30px;
    }

    .profile-section h2 {
      font-size: 1.4rem;
      color: #2e7d32;
      margin-bottom: 15px;
      border-bottom: 1px solid #d0e2d2;
      padding-bottom: 5px;
    }

    ul {
      padding-left: 20px;
    }

    li strong {
      font-weight: 600;
      color: #333;
    }

    input[type="text"],
    input[type="file"],
    textarea {
      display: block;
      width: 100%;
      padding: 10px 12px;
      margin-top: 6px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 1rem;
      font-family: inherit;
    }

    textarea {
      resize: vertical;
    }

    label {
      display: block;
      font-weight: 500;
      margin-top: 10px;
    }

    .primary-btn,
    .secondary-btn {
      padding: 10px 16px;
      font-size: 1rem;
      font-weight: 600;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }

    .primary-btn {
      background-color: #2e7d32;
      color: #fff;
      margin-top: 10px;
      transition: background-color 0.3s;
    }

    .primary-btn:hover {
      background-color: #256428;
    }

    .secondary-btn {
      background-color: #e0f2f1;
      color: #2e7d32;
      border: 1px solid #2e7d32;
      margin-left: 10px;
    }

    .inline-form {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-top: 10px;
    }

    .tag-list {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      margin: 10px 0;
      list-style: none;
      padding-left: 0;
    }

    .tag {
      background-color: #dcedc8;
      color: #33691e;
      padding: 6px 12px;
      border-radius: 50px;
      font-size: 0.9rem;
    }

    .footer-link {
      text-align: center;
      margin-top: 20px;
    }

    .footer-link a {
      color: #2e7d32;
      text-decoration: none;
      font-weight: bold;
    }

    .footer-link a:hover {
      text-decoration: underline;
    }

    .error {
      color: #d32f2f;
      font-weight: 500;
    }

    #toast {
      position: fixed;
      bottom: 20px;
      right: 20px;
      background: #2e7d32;
      color: #fff;
      padding: 10px 20px;
      border-radius: 6px;
      display: none;
    }

    #photoPreview {
      display: none;
      max-width: 100px;
      margin-top: 10px;
      border-radius: 6px;
    }
  </style>
</head>
<body>
  <h1><%= title %></h1>

  <div id="toast">Profile updated successfully!</div>

  <% if (user) { %>
    <div class="profile-wrapper">

      <!-- LEFT BOX -->
      <div class="profile-box">
        <section class="profile-section">
          <h2>User Details</h2>
          <ul>
            <li><strong>Username:</strong> <%= user.username %></li>
            <li><strong>Email:</strong> <%= user.email %></li>
            <li><strong>Joined Date:</strong> <%= user.joinDate %></li>
          </ul>
        </section>

        <section class="profile-section">
          <h2>Location Info</h2>
          <% if (location) { %>
            <% if (location.error) { %>
              <p class="error"><%= location.error %></p>
            <% } else { %>
              <ul>
                <li><strong>Latitude:</strong> <%= location.latitude %></li>
                <li><strong>Longitude:</strong> <%= location.longitude %></li>
                <li><strong>City:</strong> <%= location.city %></li>
              </ul>
            <% } %>
          <% } else { %>
            <p>No location data available.</p>
          <% } %>
        </section>

        <section class="profile-section">
          <h2>My Interests</h2>
          <% if (user.interests && user.interests.length > 0) { %>
            <ul class="tag-list">
              <% user.interests.forEach(interest => { %>
                <li class="tag"><%= interest %></li>
              <% }); %>
            </ul>
          <% } else { %>
            <p>No interests added yet.</p>
          <% } %>

          <form action="/profile/interests" method="POST" class="inline-form">
            <input type="text" name="interest" id="interest" placeholder="Add interest" required>
            <button type="submit" class="secondary-btn">Add</button>
          </form>
        </section>

        <section class="profile-section">
          <h2>Preferences</h2>
          <form action="/profile/preferences" method="POST">
            <label><input type="checkbox" name="preferences" value="get info before traveling" <% if (user.preferences && user.preferences.includes('get info before traveling')) { %>checked<% } %> /> Get Info Before Traveling</label>
            <label><input type="checkbox" name="preferences" value="friendship" <% if (user.preferences && user.preferences.includes('friendship')) { %>checked<% } %> /> Friendship</label>
            <label><input type="checkbox" name="preferences" value="language exchange" <% if (user.preferences && user.preferences.includes('language exchange')) { %>checked<% } %> /> Language Exchange</label>

            <button type="submit" class="primary-btn">Save Preferences</button>
          </form>
        </section>
      </div>

      <!-- RIGHT BOX -->
      <div class="profile-box">
        <section class="profile-section">
          <h2>Profile Settings</h2>
          <form action="/profile/update" method="POST" enctype="multipart/form-data">
            <label for="name">Full Name:</label>
            <input type="text" id="name" name="name" placeholder="Enter your full name">

            <label for="bio">Bio:</label>
            <textarea id="bio" name="bio" rows="4" cols="50" placeholder="Tell us about yourself"></textarea>

            <label for="photo">Upload Profile Photo:</label>
            <input type="file" id="photo" name="photo" onchange="previewPhoto(event)">
            <img id="photoPreview" alt="Preview">

            <button type="submit" class="primary-btn">Update Profile</button>
          </form>
        </section>
      </div>

    </div>

    <div class="footer-link">
      <a href="/logout">Logout</a>
    </div>

  <% } else { %>
    <p class="error">You are not logged in! <a href="/login">Login here!</a></p>
  <% } %>
  

  <script>
    window.onload = function() {
      const urlParams = new URLSearchParams(window.location.search);
      if (urlParams.get('updated') === 'true') {
        const toast = document.getElementById('toast');
        if (toast) {
          toast.style.display = 'block';
          setTimeout(() => toast.remove(), 3000);
        }
      }
    }

    function previewPhoto(event) {
      const img = document.getElementById('photoPreview');
      img.src = URL.createObjectURL(event.target.files[0]);
      img.style.display = 'block';
    }
  </script>
</body>
</html>
